<div class="rh-container--auto rh-container-px rh-dp-overflow--hidden">
    <div class="row row-eq-height row-gutters">
        {{#each blocks}}
        <div class="col col-12 sm-col-6 lg-col-4 xl-col-3 col-item-eq-height">
            <div class="rh-event-calendar-block">
                <div class="rh-event-calendar-block__header">
                    <img class="rh-event-calendar-block__header__hero-image" src="{{heroImage.src}}"
                        alt="{{heroImage.alt}}">

                    <div class="rh-caption-mini{{#if captionType}} {{captionType}}{{/if}}">
                        <p class="rh-caption-mini-text">{{caption}}</p>
                    </div>
                </div>

                <div class="rh-event-calendar-block__body">
                    <p class="rh-event-calendar-block__body__title">{{title}}</p>
                    <p>{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>